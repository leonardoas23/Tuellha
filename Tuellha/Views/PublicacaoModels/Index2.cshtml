@model IEnumerable<Tuellha.Models.PublicacaoModel>

<div class="row">
    @foreach (var item in Model)
    {


        <div class="container col-xxl-8 px-4 py-5">
            <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
                <div class="col-10 col-sm-8 col-lg-6">
                    <img src="data:image/png;base64, @item.ToBase64()" class="d-block mx-lg-auto img-fluid" alt="Bootstrap Themes" width="100" height="100" loading="lazy">
                </div>
                <div class="col-lg-6">
                    <h1 class="display-5 fw-bold text-body-emphasis lh-1 mb-3">@Html.DisplayFor(modelItem => item.Titulo)</h1>
                    <p class="lead">@Html.DisplayFor(modelItem => item.Conteudo)</p>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                        <button type="button" class="btn btn-primary btn-lg px-4 me-md-2">Ir Para</button>

                    </div>
                </div>
            </div>
        </div>
        <p class="lead">Publicado em: @Html.DisplayFor(modelItem => item.Data)</p>
        
    }
</div>

